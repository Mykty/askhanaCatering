<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mykty.askhanacatering">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PersonnelListActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.ReportListActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.AddMenuInOrderActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.EnterNewEaterActivity"
            android:theme="@style/AppTheme.EaterStyle" />

        <activity android:name=".activity.DayliReportList" />
        <activity android:name=".activity.ScannerActivity" />

        <activity
            android:name=".activity.StudentCabinet"
            android:theme="@style/AppTheme.ActionBar" />

    </application>

</manifest>